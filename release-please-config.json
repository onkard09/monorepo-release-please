{   
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-v-in-tag": true,
  "include-component-in-tag": true,
  "tag-separator": "@",
  "separate-pull-requests": true,
  "packages": {
    "python": {
      "release-type": "python",
      "package-name": "java",
      "component": "python"
    },
    "java": {
      "release-type": "maven",
      "package-name": "java",
      "component": "java",
      "extra-files": [
        {
          "type": "json",
          "path": "./.release-please-manifest.json",
          "jsonpath": "$.java"
        }
      ]
    }
  }
}
