{   
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-v-in-tag": true,
  "include-component-in-tag": true,
  "tag-separator": "@",
  "packages": {
    "python": {
      "release-type": "python",
      "package-name": "python-project",
      "component": "python",
      "path" : "python"
    },
    "java": {
      "release-type": "simple",
      "package-name": "calculator",
      "component": "java",
      "path" : "java",
      "extra-files": [
        "calculator/pom.xml"
      ]
    }
  }
}
